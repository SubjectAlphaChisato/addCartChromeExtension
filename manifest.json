{
  "manifest_version": 3,
  "name": "Smart Cart Assistant",
  "version": "1.0",
  "description": "AI-powered Chrome extension to search and add products to Amazon cart",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "https://api.openai.com/*",
    "https://*.amazon.com/*"
  ],
  "host_permissions": [
    "https://*.amazon.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.amazon.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Smart Cart Assistant"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
